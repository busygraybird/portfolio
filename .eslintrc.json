{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "plugins": ["react", "prettier"],
  "ignorePatterns": ["*.scss", "*.css", "rollup.config.js"],
  "rules": {
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "import/no-anonymous-default-export": "off",
    "max-len": [
      "warn",
      {
        "code": 140,
        "ignoreComments": true
      }
    ],
    "no-unused-vars": "warn",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}